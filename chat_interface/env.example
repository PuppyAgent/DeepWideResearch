# Chat Interface env template
# Copy to .env.local in the same directory
# cp chat_interface/env.example chat_interface/.env.local

# Backend API base URL (FastAPI server)
NEXT_PUBLIC_API_URL=http://localhost:8000
# Payments Service base URL (optional; falls back to NEXT_PUBLIC_API_URL)
NEXT_PUBLIC_PAYMENTS_API_URL=http://localhost:8100

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Polar (optional server-side checkout)
# Server-only; set in Vercel project settings, not exposed to client
POLAR_ACCESS_TOKEN=
POLAR_SUCCESS_URL=http://localhost:3000/account
POLAR_SERVER=sandbox

# Polar product configuration (client-safe values)
NEXT_PUBLIC_POLAR_CHECKOUT_URL=
NEXT_PUBLIC_POLAR_PRODUCT_ID=
